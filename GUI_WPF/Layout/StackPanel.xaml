<Window x:Class="Layout.StackPanel"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Layout"
        mc:Ignorable="d"
        Title="StackPanel" Height="450" Width="800">
    <Grid>
        <StackPanel Background="LightBlue" Orientation="Vertical">
            <Label Name="lblInstruction" Content="Enter Car Information" FontSize="12" FontWeight="Normal"/>
            <Label Name="lblCarName" Content="Car Name" FontSize="15"/>
            <TextBox TextWrapping="Wrap" Height="20"/>
            <Label Name="lblColor" Content="Color" FontSize="15"/>
            <TextBox TextWrapping="Wrap" Height="20"/>
            <Label Name="lblBrand" Content="Brand" FontSize="15"/>
            <TextBox TextWrapping="Wrap" Height="20"/>
            <Button Content="Display" Margin="0,10" FontSize="15" Width="100"/>
        </StackPanel>
    </Grid>
</Window>
