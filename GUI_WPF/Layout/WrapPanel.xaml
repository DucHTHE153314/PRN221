<Window x:Class="Layout.WrapPanel"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Layout"
        mc:Ignorable="d"
        Title="WrapPanel" Height="450" Width="800">
    <Grid>
        <WrapPanel Background="LightBlue" Orientation="Vertical">
            <Label Content="Enter Car Information" FontSize="12" FontWeight="Normal"/>
            <Label Content="Car Name" FontSize="12"/>
            <TextBox TextWrapping="Wrap" Width="200" Height="20"/>
            <Label Content="Color" FontSize="12"/>
            <TextBox TextWrapping="Wrap" Width="200" Height="20"/>
            <Label Content="Brand" FontSize="12"/>
            <TextBox TextWrapping="Wrap" Width="200" Height="20"/>
            <Button Content="Display" Margin="0,10" FontSize="12" Width="150" Height="20"/>
        </WrapPanel>
    </Grid>
</Window>
